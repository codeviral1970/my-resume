<div class="container mt-32  flex justify-between items-center mx-auto px-8 md:px-14 lg:px-24 w-full">
  <section class="w-full">
    <h2 id="cv" class="secondary-title">Cv</h2>
    <div class="grid gap-5 lg:grid-cols-3">
      <div>
        <div class="border rounded-lg border-gray-400 w-full mt-8 lg:col-span-1">
          {# Info #}
          {% for info in infos %}
          <div class="relative">
            <div class="h-28 bg-gradient-to-r from-yellow-200 to-yellow-500 rounded-t-lg "></div>
              <div class="absolute top-11 p-5">
                <img src="https://images.pexels.com/photos/4355346/pexels-photo-4355346.jpeg?cs=srgb&dl=pexels-murat-esibatir-4355346.jpg&fm=jpg" alt="" class="object-cover h-20 w-20 rounded ">
              </div>
              <div class="py-20 px-5 h-28  ">
                <h3 class="font-bold capitalize">{{info.firstName}} {{info.lastName}}</h3>
                <span class="text-gray-600 text-xs">Développeur web</span>
              </div>
              <div class="w-full text-center py-6 px-5">
                  <button class="border border-theme w-full h-10">Download</button>
              </div>
            </div>
          </div>
          <div class="border rounded-lg border-gray-400 w-full mt-8 ">
            <div class="relative h-50 py-7">
              <div class="py-3 px-5 ">
                <h3 class="uppercase font-bold underline">Information</h3>
              </div>
              <div class="w-full px-5 py-8">
                <div class="space-y-3">
                  <div class="flex space-x-2">       
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5" "w-5 " fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                    </svg> 
                    <span>{{info.email}}</span>
                  </div>
                  <div class="flex space-x-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                    </svg>              
                    <span> {{info.phone}}</span>
                  </div>
                  <div class="flex space-x-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="space-y-4"> {{info.address}}</span>
                  </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
        <div class="border rounded-lg border-gray-400 w-full mt-8 shadow ">
          <div class="relative h-auto py-7">
            <div class="py-3 px-5 ">
              <h3 class="uppercase underline font-bold">Compétences</h3>
            </div>
            <div class="w-full px-5">
              <div class="py-8 flex flex-wrap">
                {% for skill in skills %}
                <span class="border border-theme rounded p-2 space-x-3 space-y-6 m-1 capitalize">{{skill.name}}</span>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>

        <div class="border rounded-lg border-gray-400 w-full mt-8 shadow ">
          <div class="relative h-auto py-7">
            <div class="py-3 px-5 ">
              <h3 class="uppercase underline font-bold">Loisirs</h3>
            </div>
            <div class="w-full px-5">
              <div class="py-8 flex flex-wrap">
                {% for hobbie in hobbies %}
                <span class="border border-theme rounded p-2 space-x-3 space-y-6 m-1 capitalize">{{hobbie.name}}</span>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="lg:col-span-2">
        <div class="border rounded-lg border-gray-400 w-full mt-8">
          <div class="relative h-50 py-7">
            <div class="py-2 px-5 hidden">
              <h3 class="font-bold uppercase">About me</h3>
            </div>
            <div class="w-full px-5 space-y-5">
              <div>
              {% for about in abouts %}
                {{about.description | raw}}
              {% endfor %}
              </div>
            </div>
          </div>
        </div>
        <div class="border rounded-lg border-gray-400 w-full mt-8">
          <div class="relative h-50 py-7">
            <div class="py-3 px-5 ">
              <h3 class="font-bold uppercase underline">PARCOURS PROFESSIONNEL</h3>
            </div>
          <div class="w-full px-5">
          {% for experience in experiences %}
            <div class="mt-7">
              <div class="md:flex justify-between">
                <div>
                  <span class="uppercase">{{experience.enterpriseName}}</span>
                </div>
                <div>
                  <span class="text-gray-600">{{experience.jobName}}</span>
                </div>
              </div>
              <div class="flex space-x-2 mt-4 mb-4 md:justify-end">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{{experience.jobTime}}</span>
              </div>
              {% for expItem in experience.experienceItems %}
              <li class="mt-4 font-extralight">{{expItem.name}}</li>
              {# <div class="flex">
                <span></span>
                <span class="text-justify font-light mt-5">
                   {{expItem.name}}<br>
                </span>
              
              </div> #}
              {% endfor %}
            </div>
            <div class="border-b-[1px] border-theme mt-7"></div>
          {% endfor %}
          </div>
        </div>
      </div>
      <div class="border rounded-lg border-gray-400 w-full mt-8">
        <div class="relative h-50 py-7">
          <div class="w-full px-5 space-y-5">
            <div class="space-y-5">
              <h2 class="underline uppercase font-bold">Formation</h2>
              <div class="flex">
              {% for education in educations %}
                <div class="flex-shrink space-y-5">                  
                  <div class="space-y-5">
                    <span class="text-bold">{{education.name}}</span>
                  </div>
                  <div class="space-y-5">
                    <div class="flex space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path d="M12 14l9-5-9-5-9 5 9 5z" />
                        <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                        </svg>
                        <span>{{education.school}}</span>
                      </div>
                      <div class="flex space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <span>{{education.location}}</span>
                      </div>
                      <div class="flex space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span>{{education.nbYear}}</span>
                      </div>
                    </div> 
                  </div>
                </div>
                <div class="border-b-[1px] border-theme "></div>
              {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

